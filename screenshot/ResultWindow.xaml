<Window x:Class="QRCodeTools.screenshot.ResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QRCodeTools.screenshot"
        mc:Ignorable="d"
        Title="Result" Height="170" Width="300" ResizeMode="NoResize">
    <StackPanel>
        <TextBox x:Name="TextBox" Height="100" TextWrapping="Wrap" Text="" Margin="2"/>
        <Button Click="Copy_Btn_Click" Content="Copy"  Grid.Row="1" Grid.Column="0" x:Name="Copy_Btn" Height="20" Width="50" />
    </StackPanel>

</Window>
